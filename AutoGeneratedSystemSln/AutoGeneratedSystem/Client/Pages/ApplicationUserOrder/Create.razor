<h3>@("ApplicationUserOrder".Humanize().Titleize())</h3>
<button type="button" class="btn btn - info rounded - circle"
@onclick="@(() => NavigationHelper.NavigateToListPageForEntity(this.NavigationManager,"ApplicationUserOrder"))"
data-bs-toggle="tooltip" data-bs-placement="top"
title="@("List ApplicationUserOrder".Humanize().Titleize())">
<i class="bi bi-list" style="font-size:large"></i>
</button>
<LoadingIndicator IsLoading="IsLoading"></LoadingIndicator>
<EditForm Model="@this.Model" OnValidSubmit="OnValidSubmitAsync">
<div class="mb-3">
<DataAnnotationsValidator></DataAnnotationsValidator>
<ValidationSummary></ValidationSummary>
</div>
<div class="mb-3">
<label class="form-label">@(nameof(Model.OrderTotal).Humanize().Titleize())</label>
<InputNumber class="form-control" @bind-Value="Model.OrderTotal"/>
</div>
<div class="mb-3">
<label class="form-label">@(nameof(Model.OrderDate).Humanize().Titleize())</label>
<InputDateTime class="form-control" @bind-Value="@Model.OrderDate" />
</div>
@if (this.ApplicationUserModelItems != null)
{
<div class="mb-3">
<label class="form-label">@(nameof(Model.ApplicationUserId).Humanize().Titleize())</label>
<InputSelect class="form-control" @bind-Value="Model.ApplicationUserId">
<option value="">Select ApplicationUser...</option>
@foreach (var singleApplicationUserItem in this.ApplicationUserModelItems)
{
<option value="@singleApplicationUserItem.ApplicationUserId">@singleApplicationUserItem.Name</option>
}
</InputSelect>
</div>
}
<div class="mb-3">
<button class="btn btn-primary" type="submit">Submit</button>
</div>
</EditForm>
