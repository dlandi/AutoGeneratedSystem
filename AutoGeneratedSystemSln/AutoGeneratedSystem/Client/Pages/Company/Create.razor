<h3>@("Company".Humanize().Titleize())</h3>
<button type="button" class="btn btn - info rounded - circle"
@onclick="@(() => NavigationHelper.NavigateToListPageForEntity(this.NavigationManager,"Company"))"
data-bs-toggle="tooltip" data-bs-placement="top"
title="@("List Company".Humanize().Titleize())">
<i class="bi bi-list" style="font-size:large"></i>
</button>
<LoadingIndicator IsLoading="IsLoading"></LoadingIndicator>
<EditForm Model="@this.Model" OnValidSubmit="OnValidSubmitAsync">
<div class="mb-3">
<DataAnnotationsValidator></DataAnnotationsValidator>
<ValidationSummary></ValidationSummary>
</div>
<div class="mb-3">
<label class="form-label">@(nameof(Model.Name).Humanize().Titleize())</label>
<InputText class="form-control" @bind-Value="Model.Name"/>
</div>
<div class="mb-3">
<label class="form-label">@(nameof(Model.Country).Humanize().Titleize())</label>
<InputText class="form-control" @bind-Value="Model.Country"/>
</div>
<div class="mb-3">
<label class="form-label">@(nameof(Model.NumberOfEmployees).Humanize().Titleize())</label>
<InputNumber class="form-control" @bind-Value="Model.NumberOfEmployees"/>
</div>
<div class="mb-3">
<button class="btn btn-primary" type="submit">Submit</button>
</div>
</EditForm>
