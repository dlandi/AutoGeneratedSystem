<h3>ApplicationRole</h3>
<button type="button" class="btn btn - info rounded - circle"
@onclick="@(() => NavigationHelper.NavigateToListPageForEntity(this.NavigationManager,"ApplicationRole"))"
data-bs-toggle="tooltip" data-bs-placement="top"
title="List ApplicationRole">
<i class="bi bi-list" style="font-size:large"></i>
</button>
<LoadingIndicator IsLoading="IsLoading"></LoadingIndicator>
<EditForm Model="@this.Model" OnValidSubmit="OnValidSubmitAsync">
<div class="mb-3">
<DataAnnotationsValidator></DataAnnotationsValidator>
<ValidationSummary></ValidationSummary>
</div>
<div class="mb-3">
<label class="form-label">@nameof(Model.RoleName)</label>
<InputText class="form-control" @bind-Value="Model.RoleName"/>
</div>
<div class="mb-3">
<label class="form-label">@nameof(Model.RoleDescription)</label>
<InputText class="form-control" @bind-Value="Model.RoleDescription"/>
</div>
<div class="mb-3">
<button class="btn btn-primary" type="submit">Submit</button>
</div>
</EditForm>
