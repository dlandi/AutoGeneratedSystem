@using AutoGeneratedSystem.Common
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AutoGeneratedSystem</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.ApplicationUserRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Users
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.ApplicationRoleRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Roles
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.CompanyRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Companies
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.StoreRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Stores
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.ApplicationUserApplicationRoleRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Users Roles
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.ProductRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Products
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@Constants.PageRoutes.ApplicationUserOrderRoutes.List">
                <span class="oi oi-list" aria-hidden="true"></span> Users Orders
            </NavLink>
        </div>        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
